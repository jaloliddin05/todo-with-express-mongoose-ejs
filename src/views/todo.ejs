<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/todo.css" />
    <title>Todo</title>
  </head>
  <body class="p-5 bg-light">
    <div class="container">
      <h1 class="heading">To Do</h1>
      <form class="input-box">
        <div class="shadow"></div>
        <input
          type="text"
          class="input input-plane"
          placeholder="rejani kiriting"
          required
        />
        <button class="add"></button>
      </form>
    </div>
    <div class="container container-list">
      <div class="todo-box">
        <ul class="todo-notdone-list">
          <li>
            <h3 class="todo-list-heading">Uncompleted works</h3>
          </li>
        </ul>
        <div class="planned_todo">
          <ul class="todo-plane-list">
            <li>
              <h3 class="todo-list-heading">Planed works</h3>
            </li>
          </ul>
        </div>
        <ul class="todo-done-list">
          <li>
            <h3 class="todo-list-heading">Completed works</h3>
          </li>
        </ul>
      </div>
    </div>

    <script src="/js/todo.js"></script>
  </body>
</html>
